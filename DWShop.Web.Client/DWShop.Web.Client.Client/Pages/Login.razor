@page "/login"
@rendermode InteractiveAuto

<EditForm Model="@_TokenModel" OnValidSubmit="SubmitAsync" >
    <MudGrid>
        <MudItem xs=12>
            <MudText Typo="Typo.h4">Tienda DW</MudText>
        </MudItem>
        <MudItem xs=12>
            <MudText Typo="Typo.h4">Bienvenido a la tienda DW</MudText>
        </MudItem>
        <MudItem xs=12>
            <MudTextField  T="string"
                Label="Usuario"
                @bind-Value="_TokenModel.UserName"
                For="@(() => _TokenModel.UserName)"
                ></MudTextField>
        </MudItem>
        <MudItem xs=12>
            <MudTextField T="string"
                          Label="Contraseña"
                          InputType="InputType.Password"
                          @bind-Value="_TokenModel.Password"
                          For="@(() => _TokenModel.Password)"></MudTextField>
        </MudItem>
         <MudItem xs=12>
             <MudButton ButtonType="ButtonType.Submit" Color="Color.Primary">Login</MudButton>
             </MudItem>
    </MudGrid>

</EditForm>