<MudAppBar>
    <MudIconButton Icon="@Icons.Material.Filled.Apps" Color="Color.Inherit"
    Edge="Edge.Start" OnClick="@ToggleDrawer"/>
    <MudSpacer/>
    <MudIconButton Icon="@Icons.Material.Filled.Brightness6" Color="Color.Inherit"
      OnClick="@((e) => DarkMode())"/>

</MudAppBar>

<MudDrawer @bind-Open="@navOpen" ClipMode="DrawerClipMode.Docked" >
    <NavMenu/>
</MudDrawer>

<MudMainContent>
    <MudContainer>
        @ChildContent
    </MudContainer>
</MudMainContent>


@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public EventCallback OnDarkMode { get; set; }

    public bool navOpen { get; set; } = true;

    void ToggleDrawer()
    {
        navOpen = !navOpen;
    }

    public async Task DarkMode()
    {
        await OnDarkMode.InvokeAsync();
    }
}
